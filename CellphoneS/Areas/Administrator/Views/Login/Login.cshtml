
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Areas/Administrator/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Areas/Administrator/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Areas/Administrator/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Areas/Administrator/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />
                                 
    <link rel="stylesheet" href="~/Areas/Administrator/assets/stylesheets/theme.css" />
                                 
    <link rel="stylesheet" href="~/Areas/Administrator/assets/stylesheets/skins/default.css" />
                               
    <link rel="stylesheet" href="~/Areas/Administrator/assets/stylesheets/theme-custom.css">
                            
    <link rel="stylesheet" href="~/Areas/Administrator/assets/vendor/toast/toastr.min.css" />

    <!-- Head Libs -->
    <script src="~/Areas/Administrator/assets/vendor/modernizr/modernizr.js"></script>
    <title>Index</title>
    <style>
        a.txcenter {
            padding-top: 10px;
            display: flex;
            justify-content: space-evenly;
        }

        .body-sign {
            max-width: 400px !important;
        }
    </style>
</head>
<body ng-app="app_login">
    <section class="body-sign" ng-controller="loginController">
        <div class="center-sign">
            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Đăng Nhập</h2>
                </div>
                <form class="panel-body" autocomplete="on">
                    <div>
                        <div class="form-group mb-lg">
                            <label>Tên đăng nhập</label>
                            <div class="input-group input-group-icon">
                                <input name="Account" type="text" class="form-control input-lg account" ng-model="Id" />
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Mật khẩu</label>

                            </div>
                            <div class="input-group input-group-icon">
                                <input name="Password" type="password" class="form-control input-lg password" ng-model="Pas" />
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8" style="float:left;">
                                <div class="checkbox-custom checkbox-default">

                                </div>
                            </div>
                            <div class="col-sm-4 text-right" style="float:right; width:130px;">
                                <button type="submit" class="btn btn-primary login" ng-click="Login(Id,Pas)">Đăng nhập</button>
                            </div>

                        </div>
                        <div class="row" style="text-align: center; padding-top: 10px;">
                            <a href="/Login/Reset" style=""><label id="ForgetPas">Quên mật khẩu?</label></a>
                        </div>
                    </div>

                </form>
            </div>


        </div>
    </section>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>
    <script src="~/Areas/Administrator/assets/vendor/toast/toastr.min.js"></script>
    <script src="~/Areas/Administrator/assets/javascripts/theme.custom.js"></script>
    <script src="~/Areas/Administrator/assets/javascripts/theme.init.js"></script>

    <script src="~/Areas/Administrator/assets/vendor/toast/toastr.min.js"></script>
    <script src="~/Areas/Administrator/Scripts/Controller/LoginController.js"></script>
</body>
</html>
